<div class="container wrap-m">
  <div class="col-md-12">

    <p id="notice"><%= notice %></p>

    <h1 class="titulo-grid">Areas</h1>

    <table class="table table-bordered table-dark">
      <thead>
        <tr>
          <th>Nombre Area</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @areas.each do |area| %>
          <tr>
            <td><%= area.name %></td>
            <td><%= link_to 'Mostrar', area, :class => 'btn btn-primary' %></td>
            <td><%= link_to 'Editar', edit_area_path(area), :class => 'btn btn-warning' %></td>
            <td><%= link_to 'Eliminar', area, method: :delete, data: { confirm: 'Â¿Estas seguro de eliminar esta area?' }, :class => 'btn btn-danger' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nueva Area', new_area_path, class: 'btn btn-success' %>

  </div>
</div>
