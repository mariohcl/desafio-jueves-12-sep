<div class="bg mt-5">
  <div class="container">
    <h1><i class="far fa-building"></i> Compañias</h1>
  </div>
</div>

<div class="container ">

  <p id="notice"><%= notice %></p>

<table class="table table-bordered table-dark">
  <thead>
    <tr>
      <th>Empresa</th>
      <th>Cantidad de empleados</th>
      <th>Opciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td class="align-middle"><%= link_to company.name, company, class: 'companies' %></td>
        <td class="align-middle"><%= company.employees.count %></td>
        <td><%= link_to 'Editar', edit_company_path(company), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Eliminar', company, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nueva Compañia', new_company_path, :class => 'btn btn-info' %>
</div>
