<div class="container mb-5 wrap-m">
  <div class="row">

    <div class="col-md-6">

      <p class="info-company">
        <strong>Nombre:</strong>
        <span><%= @company.name %></span>
      </p>

      <%= link_to 'Editar', edit_company_path(@company), class: 'btn btn-primary' %>
      <%= link_to 'Volver', companies_path, class: 'btn btn-info'  %>

      <p id="notice"><%= notice %></p>

    </div>

    <div class="col-md-6">
      <h1 class="titulo-grid titulo-grid-inter">Crear un empleado</h1>

      <div class="col-md-12 p-0">

      <%= form_with(model: [ @company, @employee ]) do |form| %>

        <div class="form-group">
          <%= form.label :first_name, "Nombre" %>
          <%= form.text_field :first_name, :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :last_name, "Apellido" %>
          <%= form.text_field :last_name, :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :email, "Email" %>
          <%= form.text_field :email, :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :area_id, "Area" %>
          <%= form.select :area_id, Area.pluck(:name, :id), :class => "form-control" %>
        </div>

        <%= form.submit "Guardar", :class => "btn btn-primary" %>

      <% end %>
      </div>
    </div>

  </div>
</div>



<div class="container">

<h1 class="titulo-grid">Empleados</h1>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Apellido</th>
        <th scope="col">Area</th>
        <th scope="col">Opciones</th>
      </tr>
    </thead>
    <tbody>
      <% @company.employees.each do |employee| %>
      <tr>
        <td class="align-middle"><%= employee.first_name %></td>
        <td class="align-middle"><%= employee.last_name %></td>
        <td class="align-middle"><%= employee.area.name %></td>
        <td>
          <%=
          link_to "Eliminar",
          company_employee_path(@company, employee),
          method: :delete,
          data: { :confirm => "Â¿Desea Eliminar?"},
          :class => "btn btn-danger"
          %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
